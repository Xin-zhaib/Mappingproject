<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <LinearLayout
         android:background="#03A9F4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
      <ImageView
          android:id="@+id/iv_back"
          android:layout_gravity="center"
          android:background="@mipmap/icon_back_black"
          android:layout_marginLeft="15dp"
          android:layout_width="20dp"
          android:layout_height="35dp"/>
      <TextView
          android:text="Test"
          android:background="#03A9F4"
          android:layout_weight="1"
          android:textColor="#fff"
          android:textSize="20sp"
          android:gravity="center"
          android:textStyle="bold"
          android:layout_width="0dp"
          android:layout_height="50dp"/>
     </LinearLayout>

   <TextView
       android:layout_marginTop="20dp"
       android:text="Test one"
       android:layout_gravity="center_horizontal"
       android:textColor="#000"
       android:textStyle="bold"
       android:textSize="20sp"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="Question:"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_danxuan"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:hint="Sometimes you want to curse people?"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#E1E1E1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
     <TextView
         android:layout_marginLeft="10dp"
         android:text="Answer："
         android:textColor="#000"
         android:textSize="20sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <EditText
         android:id="@+id/et_danxuan1"
         android:layout_marginLeft="10dp"
         android:background="#00000000"
         android:hint="please enter answer"
         android:layout_marginRight="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <View
         android:background="#E1E1E1"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     <TextView
         android:id="@+id/commit_danxuan"
         android:text=""
         android:textSize="20sp"
         android:background="#03A9F4"
         android:textColor="#fff"
         android:gravity="center"
         android:textStyle="bold"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="40dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:text="Test two"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="Question:"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_panduan"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:hint="are you happy?"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#E1E1E1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
     <TextView
         android:layout_marginLeft="10dp"
         android:text="Answer："
         android:textColor="#000"
         android:textSize="20sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <EditText
         android:id="@+id/et_panduan1"
         android:layout_marginLeft="10dp"
         android:background="#00000000"
         android:hint="please enter your answer"
         android:layout_marginRight="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <View
         android:background="#E1E1E1"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     <TextView
         android:id="@+id/commit_panduan"
         android:text=""
         android:textSize="20sp"
         android:background="#03A9F4"
         android:textColor="#fff"
         android:gravity="center"
         android:textStyle="bold"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="40dp"/>
    <TextView
        android:layout_marginTop="30dp"
        android:text="Test three"
        android:layout_gravity="center_horizontal"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginLeft="10dp"
        android:text="Question："
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/et_jianda"
        android:layout_marginLeft="10dp"
        android:background="#00000000"
        android:hint="are you like lonely?"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:background="#E1E1E1"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
     <TextView
         android:layout_marginLeft="10dp"
         android:text="Answer："
         android:textColor="#000"
         android:textSize="20sp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"/>
     <EditText
         android:id="@+id/et_jianda1"
         android:layout_marginLeft="10dp"
         android:background="#00000000"
         android:hint="please enter your answer"
         android:layout_marginRight="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>
     <View
         android:background="#E1E1E1"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_width="match_parent"
         android:layout_height="1dp"/>
     <TextView
         android:id="@+id/commit_tiankong"
         android:text="Save"
         android:textSize="20sp"
         android:background="#03A9F4"
         android:textColor="#fff"
         android:gravity="center"
         android:textStyle="bold"
         android:layout_marginRight="10dp"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="20dp"
         android:layout_width="match_parent"
         android:layout_height="40dp"/>
    </LinearLayout>
</ScrollView>